{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ERPL RFC Unit Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/test/unittest",
            "args": [
                "--test-dir",
                "${workspaceFolder}/rfc",
                "'test/sql/*'"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/rfc/",
            "environment": [
                {
                    "name": "RFC_TRACE",
                    "value": "0"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${env:LD_LIBRARY_PATH}:${workspaceFolder}/nwrfcsdk/linux/lib"
                },
                {
                    "name": "LSAN_OPTIONS",
                    "value": "suppressions=${workspaceFolder}/scripts/lsan_suppress.txt"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "CMake: build",
            "miDebuggerPath": ""
        },
        {
            "name": "Debug BICS SQL Unit Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/ERPL_RFC/test/unittest",
            "args": [
                "--test-dir",
                "./test/sql",
                "[bics]"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/rfc/",
            "environment": [
                {
                    "name": "RFC_TRACE",
                    "value": "0"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${env:LD_LIBRARY_PATH}:${workspaceFolder}/nwrfcsdk/linux/lib"
                },
                {
                    "name": "LSAN_OPTIONS",
                    "value": "suppressions=${workspaceFolder}/scripts/lsan_suppress.txt"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
            "miDebuggerPath": ""
        },
        {
            "name": "Debug ODP SQL Unit Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/ERPL_RFC/test/unittest",
            "args": [
                "--test-dir",
                "./test/sql",
                "[odp]"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/rfc/",
            "environment": [
                {
                    "name": "RFC_TRACE",
                    "value": "0"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${env:LD_LIBRARY_PATH}:${workspaceFolder}/nwrfcsdk/linux/lib"
                },
                {
                    "name": "LSAN_OPTIONS",
                    "value": "suppressions=${workspaceFolder}/scripts/lsan_suppress.txt"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
            "miDebuggerPath": ""
        },
        {
            "name": "Debug ERPL CPP Unit Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/ERPL_RFC/extension/erpl_rfc/test/cpp/erpl_tests",
            "args": [ 
                "[odp_xml]"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/rfc/",
            "environment": [
                {
                    "name": "RFC_TRACE",
                    "value": "1"
                },
                {
                    "name": "LSAN_OPTIONS",
                    "value": "suppressions=${workspaceFolder}/scripts/lsan_suppress.txt"
                },
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_odr_violation=0"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${env:LD_LIBRARY_PATH}:${workspaceFolder}/nwrfcsdk/linux/lib"
