# name: test/sql/sap_describe_fields.test
# description: test the functionality to describe fields of a SAP table
# group: [rfc]

# Require RFC the extension
require erpl_rfc

# Configure connection ------------------------------------------------
require-env ERPL_SAP_ASHOST

require-env ERPL_SAP_SYSNR

require-env ERPL_SAP_USER

require-env ERPL_SAP_PASSWORD

require-env ERPL_SAP_CLIENT

require-env ERPL_SAP_LANG

statement ok
CREATE SECRET abap_trial (
    TYPE sap_rfc, 
    ASHOST '${ERPL_SAP_ASHOST}', 
    SYSNR '${ERPL_SAP_SYSNR}', 
    CLIENT '${ERPL_SAP_CLIENT}', 
    USER '${ERPL_SAP_USER}', 
    PASSWD '${ERPL_SAP_PASSWORD}',
    LANG '${ERPL_SAP_LANG}'
);

# ---------------------------------------------------------------------

# Confirm I retrieve the correct field names
query II
SELECT field, is_key FROM sap_describe_fields('/DMO/FLIGHT');
----
CLIENT
X
CARRIER_ID
X
CONNECTION_ID
X
FLIGHT_DATE
X
PRICE
(empty)
CURRENCY_CODE
(empty)
PLANE_TYPE_ID
(empty)
SEATS_MAX
(empty)
SEATS_OCCUPIED
(empty)

# ---------------------------------------------------------------------
# CDS View: should return field metadata (including NODE-type entries)
query I
SELECT COUNT(*) > 0 FROM sap_describe_fields('/DMO/R_Booking_D');
----
1

# ---------------------------------------------------------------------
# /DMO/TRAVEL: should contain SSTR-typed fields
query I
SELECT COUNT(*) > 0 FROM sap_describe_fields('/DMO/TRAVEL') WHERE sap_type = 'SSTR';
----
1

# /DMO/AGENCY: should contain STRG-typed fields
query I
SELECT COUNT(*) > 0 FROM sap_describe_fields('/DMO/AGENCY') WHERE sap_type = 'STRG';
----
1

# T002: should contain LANG-typed fields
query I
SELECT COUNT(*) > 0 FROM sap_describe_fields('T002') WHERE sap_type = 'LANG';
----
1

